<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    xmlns:tools="http://schemas.android.com/tools"
                    tools:context=".ui.students.AddStudentFragment">
    <TextView
            android:text="First name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first_name_txt"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:textSize="20sp"/>
    <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/first_name_edit"
              android:layout_below="@id/first_name_txt"
              android:layout_marginStart="30dp"
              android:layout_marginTop="10dp"
              android:hint="Enter students first name  "
              android:inputType="textPersonName|textCapWords"
              android:maxLength="25"/>
    <TextView
            android:text="Surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/surname_txt"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:layout_below="@id/first_name_edit"/>
    <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/surname_edit"
              android:layout_below="@id/surname_txt"
              android:layout_marginStart="30dp"
              android:layout_marginTop="10dp"
              android:hint="Enter students surname  "
              android:inputType="textPersonName|textCapWords"
              android:maxLength="25"/>
    <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_txt"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:layout_below="@id/surname_edit"/>
    <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/email_edit"
              android:layout_below="@id/email_txt"
              android:layout_marginStart="30dp"
              android:layout_marginTop="10dp"
              android:hint="Enter students email  "
              android:inputType="textEmailAddress"
              android:maxLength="40"/>
    <TextView
            android:text="Phone number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone_txt"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:layout_below="@id/email_edit"/>
    <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/phone_edit"
              android:layout_below="@id/phone_txt"
              android:layout_marginStart="30dp"
              android:layout_marginTop="10dp"
              android:hint="Enter students phone number  "
              android:inputType="phone"
              android:maxLength="9"/>
    <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description_txt"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:layout_below="@id/phone_edit"/>
    <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/description_edit"
              android:layout_below="@id/description_txt"
              android:layout_marginStart="30dp"
              android:layout_marginTop="10dp"
              android:hint="Enter description of student  "
              android:inputType="textMultiLine"
              android:scrollbars="vertical"
              android:maxLines="8"
              android:maxLength="1000"/>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/cancel"
                android:layout_marginStart="6dp"
                android:id="@+id/cancel_but"
                android:layout_below="@id/description_edit"/>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="6dp"
                android:text="@string/add"
                android:id="@+id/add_but"
                android:layout_below="@id/description_edit"/>

    </RelativeLayout>


</ScrollView>