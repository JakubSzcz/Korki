<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    xmlns:tools="http://schemas.android.com/tools"
                    tools:context=".ui.students.AddStudentFragment">
        <TextView
                android:text="First name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/first_name_txt"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:textSize="20sp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/first_name_content"
                  android:layout_below="@id/first_name_txt"
                  android:layout_marginStart="30dp"
                  android:layout_marginTop="10dp"/>
        <TextView
                android:text="Surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/surname_txt"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:textSize="20sp"
                android:layout_below="@id/first_name_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/surname_content"
                  android:layout_below="@id/surname_txt"
                  android:layout_marginStart="30dp"
                  android:layout_marginTop="10dp"/>
        <TextView
                android:text="Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email_txt"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:textSize="20sp"
                android:layout_below="@id/surname_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/email_content"
                  android:layout_below="@id/email_txt"
                  android:layout_marginStart="30dp"
                  android:layout_marginTop="10dp"/>
        <TextView
                android:text="Phone number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone_txt"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:textSize="20sp"
                android:layout_below="@id/email_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/phone_content"
                  android:layout_below="@id/phone_txt"
                  android:layout_marginStart="30dp"
                  android:layout_marginTop="10dp"/>
        <TextView
                android:text="Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description_txt"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:textSize="20sp"
                android:layout_below="@id/phone_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/description_content"
                  android:layout_below="@id/description_txt"
                  android:layout_marginStart="30dp"
                  android:layout_marginTop="10dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/added_txt"
                  android:layout_below="@id/description_content"
                  android:text="Student added:"
                  android:layout_marginStart="30dp"
                  android:layout_marginTop="10dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/added_content"
                  android:layout_below="@id/added_txt"
                  android:layout_marginStart="30dp"
                  android:layout_marginTop="10dp"/>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/cancel"
                android:layout_marginStart="6dp"
                android:id="@+id/cancel_but"
                android:layout_below="@id/added_content"/>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="6dp"
                android:text="Call"
                android:id="@+id/call_but"
                android:layout_below="@id/added_content"/>

    </RelativeLayout>


</ScrollView>