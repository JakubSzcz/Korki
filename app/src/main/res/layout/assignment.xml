<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/assignment_name"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assignment_name"
            android:id="@+id/assignment_added"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:text="Delete"
            android:id="@+id/delete_assignment_button"
            android:onClick="deleteAssignment"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/delete_assignment_button"
            android:layout_marginEnd="10dp"
            android:text="Edit"
            android:id="@+id/edit_assignment_button"
            android:onClick="editAssignment"/>



</RelativeLayout>